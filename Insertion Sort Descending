#include <iostream>
using namespace std;

int main () {
	int n;
	cout << "How many numbers?:" << endl;
	cin >> n;
	
	// Declaring dynamic array
	int* a = new int[n];
	
	// Taking input
	for (int i=0;i<n;i++) {
		cout << "Enter Number:" << endl;
		cin >> a[i];
	}
	
	// Displaying unsorted data
	cout << endl << "********** Unsorted Data **********" << endl;
	for (int i=0;i<n;i++){
		cout << a[i] << "   ";
	}
	
	// Sorting Descendingly with INSERTION SORT
	for (int i=1; i<n; i++){
		int item = a[i];
		int k, j;
		for (k=0; k<i; k++){
			if(a[k] < item){
				break;
			}
		}
		for (j=i; j>k; j--){
			a[j] = a[j-1];
		}
		a[j] = item;
	}
	
	// Displaying sorted data
	cout << "********** Sorted Data(Descendingly) **********" << endl;
	for (int i=0;i<n;i++){
		cout << a[i] << "   ";
	}
	cout << endl << endl;
}
